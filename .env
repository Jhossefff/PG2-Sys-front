const BASE = import.meta.env.VITE_API_URL || "http://localhost:3001/api";

export async function getEmpresas() {
  const res = await fetch(`${BASE}/empresas`);
  if (!res.ok) {
    let msg = "Error al obtener las empresas";
    try {
      const err = await res.json();
      msg = err?.message || msg;
    } catch {}
    throw new Error(msg);
  }
  return res.json();
}
